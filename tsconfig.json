{
  "compilerOptions": {
    "outDir": "./htdocs/dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "baseUrl": "types",
    "typeRoots": [
      "types"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}