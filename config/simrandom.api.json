{
  "openapi": "3.0.3",
  "info": {
    "title": "Simrandom API",
    "description": "Title",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost/simrandom/htdocs/api/index.php",
      "description" : "Development server"
    },
    {
      "url": "https://simrandom.yrialinsight.com/api",
      "description": "Production server"
    }
  ],
  "components": {
    "schemas": {
      "GeneralError": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "Challenge": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          }
        }
      }
    }
  },
  "paths": {
    "/challenge": {
      "get": {
        "description": "Return all active challenges",
        "responses": {
          "200": {
            "description": "list of active challenge",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Challenge"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error on list of active challenge",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GeneralError"
                }
              }
            }
          }
        }
      }
    }
  }
}
