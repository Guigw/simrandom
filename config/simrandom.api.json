{
  "openapi": "3.0.3",
  "info": {
    "title": "Simrandom API",
    "description": "Title",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost/simrandom/htdocs/api/index.php",
      "description": "Development server"
    },
    {
      "url": "https://simrandom.yrialinsight.com/api",
      "description": "Production server"
    }
  ],
  "components": {
    "schemas": {
      "GeneralError": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "NotFound": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "Challenge": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "ChallengeDetails": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "randomizers": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "RandomizerResult": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "result": {
            "type": "string"
          },
          "required": {
            "type": "string"
          }
        }
      }
    }
  },
  "paths": {
    "/challenge": {
      "get": {
        "description": "Return all active challenges",
        "responses": {
          "200": {
            "description": "list of active challenge",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Challenge"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error on list of active challenge",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GeneralError"
                }
              }
            }
          }
        }
      }
    },
    "/challenge/{id}": {
      "get": {
        "description": "Return a challenge and his randomizers",
        "responses": {
          "200": {
            "description": "Return a challenge and his randomizers",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ChallengeDetails"
                }
              }
            }
          },
          "404": {
            "description": "Challenge not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NotFound"
                }
              }
            }
          },
          "500": {
            "description": "Error on details of active challenge",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GeneralError"
                }
              }
            }
          }
        },
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the challenges",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "style": "simple"
          }
        ]
      }
    },
    "/randomizer/{name}": {
      "get": {
        "description": "Return the result of a randomizer",
        "responses": {
          "200": {
            "description": "Return the result of a randomizer",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RandomizerResult"
                }
              }
            }
          },
          "404": {
            "description": "Randomizer not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NotFound"
                }
              }
            }
          },
          "500": {
            "description": "Error on Randomizer",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GeneralError"
                }
              }
            }
          }
        },
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "description": "name of the randomizer",
            "required": true,
            "schema": {
              "type": "string"
            },
            "style": "simple"
          },
          {
            "name": "number",
            "in": "query",
            "description": "number for the randomizer colors",
            "schema": {
              "type": "string"
            },
            "style": "simple"
          }
        ]
      }
    }
  }
}
